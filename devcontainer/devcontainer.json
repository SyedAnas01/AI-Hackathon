{
    "name": "AI Challenge Hackathon",
    "image": "mcr.microsoft.com/devcontainers/python:3.9",  // Python 3.9 base image
    "postCreateCommand": "pip install -r requirements.txt",  // Install dependencies after creation
    "forwardPorts": [8501],  // Streamlit's default port
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",          // Python extension
                "ms-python.vscode-pylance"   // Pylance for Python
            ]
        }
    },
    "remoteUser": "vscode"  // Default user for Codespaces
}

